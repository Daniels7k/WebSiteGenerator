<head>
    <link rel="stylesheet" href="/styles/template_site.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400&display=swap" rel="stylesheet">
    <title>{{{data.nome}}}</title>
</head>

<div id="headerContainer">
    <div id="info">
        <img src="{{{data.github}}}.png" alt="">
        <p id="nome">{{{data.nome}}}</p>
        <p id="profissao">{{{data.profissao}}}</p>
        <p id="regiao">{{{data.regiao}}}</p>
    </div>
</div>
<div id="sobre">
    <br><br>
    <p id="infoSobre">{{{data.sobre}}}</p>
    <hr>
</div>

<div id="squares">
    <div id="linkedin" class="square">
        <img src="/assets/icons/linkedin-logo.png" alt="">
        <p>Acesse meu Linkedin</p>
        <br>
        <button onclick=window.open("{{{data.linkedin}}}")>Clique Aqui</button>
    </div>
    <div id="github" class="square">
        <img src="/assets/icons/github-logo.png" alt="">
        <p>Veja tamb√©m meu <br>
            Github</p>
        <br>
        <button onclick=window.open("{{{data.github}}}")>Clique Aqui</button>
    </div>
    <div id="gmail" class="square">
        <img src="/assets/icons/gmail-logo.png" alt="">
        <p>Entre em contato comigo</p>
        <br>
        <button onclick="emailPopup('{{{data.email}}}')">Clique Aqui</button>
    </div>
</div>
<script>
    function emailPopup (email) {
        navigator.clipboard.writeText(email)
        alert("Email Copiado: " + email )
    }
</script>